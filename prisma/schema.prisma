generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  USER    // Visitante/Lead
  MEMBER  // Aluno
  ADMIN   // Dono/Gestor
}

model User {
  id            String    @id @default(cuid())
  name          String?
  email         String?   @unique
  password      String?
  image         String?
  role          Role      @default(USER)
  xpPoints      Int       @default(0)
  planId        String?
  
  progressLogs  ProgressLog[]
  checkIns      CheckIn[]
  payments      Payment[]
  
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
}

model Modality {
  id          String   @id @default(cuid())
  name        String   // Ex: Jiu-Jitsu, Pilates, Musculação
  description String?
  classes     ClassSchedule[]
}

model ClassSchedule {
  id          String   @id @default(cuid())
  modalityId  String
  modality    Modality @relation(fields: [modalityId], references: [id])
  title       String   // Ex: Jiu-Jitsu Adultos - Iniciante
  instructor  String   // Nome do professor
  startTime   DateTime
  endTime     DateTime
  capacity    Int      @default(30)
  
  checkIns    CheckIn[]
}

model CheckIn {
  id              String         @id @default(cuid())
  userId          String
  user            User           @relation(fields: [userId], references: [id])
  classScheduleId String?
  classSchedule   ClassSchedule? @relation(fields: [classScheduleId], references: [id])
  date            DateTime       @default(now())
}

model ProgressLog {
  id          String   @id @default(cuid())
  userId      String
  user        User     @relation(fields: [userId], references: [id])
  metricType  String   // Ex: "FAIXA", "PESO", "NIVEL_FLEXIBILIDADE"
  value       String   // Ex: "Faixa Azul - 2 Graus", "75.5kg"
  notes       String?
  date        DateTime @default(now())
}

model Payment {
  id          String   @id @default(cuid())
  userId      String
  user        User     @relation(fields: [userId], references: [id])
  amount      Float
  status      String   @default("PENDING")
  dueDate     DateTime
  paidAt      DateTime?
}
